generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int      @default(autoincrement()) @id
  first_name String
  last_name  String
  email      String   @unique
  role       Role
  status     Status
  password   String   @db.VarChar(50)
  created_at DateTime @db.DateTime()
  updated_at DateTime @db.DateTime()
}

enum Status {
  activated
  unactivated
}

enum Role {
  parent
  admin
  intervenant
}